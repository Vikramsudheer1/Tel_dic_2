<%- include('header/header.ejs') %>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300" rel="stylesheet">
<div class="container">
  <div class="page-header">
   <h1> Telephone Directory</h1>
  </div>


 <div class="row"> 
 <div class="col-md-3">
  <% if(msg != ""){%>
  <div class="alert alert-success" role="alert">
    <%= msg %>
   
  </div>
  <%}%>
 <form method="POST" action="/add">
  <div class="form-group">
    <label for="email">FirstName</label>
    <input type="text" class="form-control " name="FirstName" id="email">
  </div>
  <div class="form-group ">
    <label for="email">LastName</label>
    <input type="text" class="form-control " name="LastName" id="email">
  </div> 
  <div class="form-group">
    <label for="email">PhoneNumber</label>
    <input type="text" class="form-control " name="PhoneNumber" id="email">
  </div>

<button type="submit" class="btn button-add">Submit</button>
  <button type="submit" class="btn  btn ">Reset</button>
     </form>
   </div> 
   
 <div class=" col-md-9">
 <div class="  col-md-10 col-md-offset-2">
  <table class="table">
    <thead>
      <tr>
        
        <th>Firstname</th>
        <th>Lastname</th>
        <th>PhoneNumber</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i=0;i<Numbers.length; i++){ %>
      <tr>
        <td><%= Numbers[i].FirstName %></td>
        <td><%= Numbers[i].LastName %></td>
        <td><%= Numbers[i].PhoneNumber %></td>
        <td>
          <a href="/update/<%= i%>" class="btn btn-success">Edit</a>
          <a href="/delete/<%= i%>" class="btn btn-danger">Delete</a>
        </td>
         <td>
    <span class="glyphicon glyphicon-edit btn-edit"/>
           <span class="glyphicon glyphicon-remove btn-remove"/>
        </td>
      </tr>
      <% } %>
     
    </tbody>
  </table>
   </div>
</div>
  </div>

</div>
